<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Productos</title>
  <!-- Bootstrap Darkly Theme -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.1.3/darkly/bootstrap.min.css">
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Mi Tienda</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/index">Inicio</a>
          <a class="nav-link active" aria-current="page" href="/productos">Productos</a>
        </div>
      </div>
    </div>
  </nav>

  <main class="container mt-4">
    <h1 class="text-center">PRODUCTOS</h1>
    
    <form action="/productos" method="POST" class="row g-3 my-3">
      <div class="col-md-2">
        <input type="text" class="form-control" name="imagen" placeholder="Url" required>
      </div>
      <div class="col-md-2">
        <input type="text" class="form-control" name="nombre" placeholder="Nombre" required>
      </div>
      <div class="col-md-2">
        <input type="text" class="form-control" name="descripcion" placeholder="DescripciÃ³n">
      </div>
      <div class="col-md-2">
        <input type="number" class="form-control" step="0.01" name="precio" placeholder="Precio" required>
      </div>
      <div class="col-md-2">
        <input type="text" class="form-control" name="estado" placeholder="Estado" required>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-success">Agregar Producto</button>
      </div>
    </form>

    <div class="row">
      <% productos.forEach(producto => { %>
        <div class="col-md-4 mb-3">
          <div class="card bg-secondary text-white">
            <img src="<%= producto.imagen %>" class="card-img-top" alt="<%= producto.nombre %>" style="max-height: 200px; object-fit: contain;">
            <div class="card-body">
              <form action="/productos/<%= producto.id %>?_method=PUT" method="POST">
                <input type="text" class="form-control mb-1" name="imagen" value="<%= producto.imagen %>">
                <input type="text" class="form-control mb-1" name="nombre" value="<%= producto.nombre %>">
                <input type="text" class="form-control mb-1" name="descripcion" value="<%= producto.descripcion %>">
                <input type="number" class="form-control mb-1" step="0.01" name="precio" value="<%= producto.precio %>">
                <input type="text" class="form-control mb-1" name="estado" value="<%= producto.estado %>">
                <button type="submit" class="btn btn-primary">Actualizar</button>
              </form>
              <form action="/productos/<%= producto.id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger mt-2">Eliminar</button>
              </form>
            </div>
          </div>
        </div>
      <% }); %>      
    </div>
  </main>
</body>
</html>
