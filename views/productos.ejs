<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos</title>
</head>
<body>
  <h1>PRODUCTOS</h1>
  
  <form action="/productos" method="POST">
    <input type="text" name="imagen" placeholder="Url" required>
    <input type="text" name="nombre" placeholder="Nombre" required>
    <input type="text" name="descripcion" placeholder="DescripciÃ³n">
    <input type="number" step="0.01" name="precio" placeholder="Precio" required>
    <input type="text" name="estado" placeholder="Estado" required>
    <button type="submit">Agregar Producto</button>
  </form>

  <ul>
    <% productos.forEach(producto => { %>
        <li>
          
          <form action="/productos/<%= producto.id %>?_method=PUT" method="POST">
            <img src="<%= producto.imagen %>" style="max-width: 100px; max-height: 100px;">


            <input type="text" name="imagen" value="<%= producto.imagen %>">
            <input type="text" name="nombre" value="<%= producto.nombre %>">
            <input type="text" name="descripcion" value="<%= producto.descripcion %>">
            <input type="number" step="0.01" name="precio" value="<%= producto.precio %>">
            <input type="text" name="estado" value="<%= producto.estado %>">
            <button type="submit">Actualizar</button>
          </form>
          <form action="/productos/<%= producto.id %>?_method=DELETE" method="POST">
            <button type="submit">Eliminar</button>
          </form>
        </li>
      <% }); %>      
  </ul>
</body>
</html>
